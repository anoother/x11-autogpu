Crystal Well
    Identifier  "Intel Iris Pro 5200"
    Driver      "intel"
    Section     "Files"
        ModulePath  "/usr/lib/xorg/modules"
    EndSection

[\[]AMD/ATI[\]] Device 67df
    Identifier  "AMD RX 480"
    Driver      "amdgpu"
    Option      "TearFree" "on"
    Section     "Files"
        ModulePath  "/opt/amdgpu-pro/lib/xorg/modules"
    EndSection

.+
    Option      "DRI" "3"
    Option      "AccelMethod" "glamor"
